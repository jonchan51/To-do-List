<%= form_with model: @category, method: :get, local: true do |f| %>
  <p>
    <%= f.collection_select(:category_id, Category.all, :id, :name,
                            { :selected => params[:category_id], 
                              :include_blank => true }) %>
    <%= f.submit "Filter", name: nil %>
  </p>
<% end %>

