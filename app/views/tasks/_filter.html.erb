<%= form_with model: @category, method: :get, local: true do |f| %>
  <p>
    <%= f.label :date_group, "Due: " %>
    <%= f.select(:date_group, options_for_select(['Next 7 Days',
                                                  'Anytime'],
                                                  params[:date_group]),
                              { :include_blank => 'Today' }) %>
  </p>

  <p>
    <%= f.label :priority, "Priority: " %>
    <%= f.select(:priority, options_for_select([['None', 0],
                                                ['Low', 1],
                                                ['Medium', 2],
                                                ['High', 3]],
                                                params[:priority]),
                            { :include_blank => true }) %>

    <%= f.label :category_id, "Category: " %>
    <%= f.collection_select(:category_id, 
                            Category.all.order(name: :asc), :id, :name,
                            { :selected => params[:category_id], 
                              :include_blank => true }) %>
    <%= f.label :completed, "Status: " %>
    <%= f.select(:completed, options_for_select([['Active', 0], 
                                                 ['Completed', 1]],
                                                params[:completed])) %>
  </p>

  <p>
    <%= f.submit "Filter", name: nil %>
    <%= link_to 'Reset', tasks_path %><br>
  </p>
<% end %>

