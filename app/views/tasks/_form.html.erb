<%= form_with model: @task, local: true do |f| %>
 
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@task.errors.count, "error") %> prohibited
        this task from being saved:
      </h2>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :duedate, "Due Date" %><br>
    <%= f.datetime_select :duedate, start_year: Time.now.year, 
      default: { :hour => 23, :minute => 59 }%>
  </p>
 
  <p>
    <%= f.label :category_list, "Select Categories" %><br>
    <%= f.collection_select(:category_list, 
                            Category.all.order(name: :asc), :id, :name,
                            { :selected => @task.categories.map do |t|
                                             t.id
                                           end,
                              :include_blank => true },
                            { :multiple => true }) %>
  </p>

  <p>
  <%= f.label :new_category_list, "or create new Categories
                                   (seperated by ',')" %><br>
    <%= f.text_field :new_category_list %>
  </p>

  <p>
    <% if @task.persisted? %>
      <%= f.label :completed %>
      <%= f.check_box :completed %>
    <% end %>
  </p>

  <p>
    <%= f.submit %>
  </p>
 
<% end %>
