<h1>Listing tasks</h1>

<%= link_to 'New Task', new_task_path %>
 
<%= render 'filter' %>

<table>
  <tr>
    <th>Title</th>
    <th></th>
  </tr>
 
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= link_to 'Show', task_path(task) %></td>
      <td><%= link_to 'Edit', edit_task_path(task) %></td>
      <td><%= link_to 'Destory', task_path(task),
              method: :delete,
              data: {confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
